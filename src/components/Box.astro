---
interface Props {
  background?:
    | "light-gray"
    | "dark-gray"
    | "light-azure"
    | "dark-azure"
    | "light-lavender"
    | "dark-lavender";

  class?: string;
}

const { background, class: className } = Astro.props;

let backgroundClass = "";
switch (background) {
  case "light-gray":
    backgroundClass = "dark:bg-neutral-700 bg-neutral-50";
    break;
  case "light-azure":
    backgroundClass = "bg-azure-300";
    break;
  case "dark-azure":
    backgroundClass = "bg-azure-800";
    break;
  case "light-lavender":
    backgroundClass = "bg-lavender-300";
    break;
  case "dark-lavender":
    backgroundClass = "bg-lavender-100 dark:bg-lavender-800";
    break;
  default:
    backgroundClass = "dark:bg-neutral-900 bg-white";
}
---

<div
  class:list={[
    "relative size-full rounded-2xl p-8 shadow-md dark:shadow-none",
    backgroundClass,
    className,
  ]}
>
  <slot />
</div>
