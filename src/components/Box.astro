---
interface Props {
  background?:
    | "light-gray"
    | "dark-gray"
    | "light-azure"
    | "dark-azure"
    | "light-lavender"
    | "dark-lavender";
}

const { background } = Astro.props;
let backgroundClass = "";
switch (background) {
  case "light-gray":
    backgroundClass = "bg-neutral-700";
    break;

  case "light-azure":
    backgroundClass = "bg-azure-300";
    break;
  case "dark-azure":
    backgroundClass = "bg-azure-800";
    break;
  case "light-lavender":
    backgroundClass = "bg-lavender-300";
    break;
  case "dark-lavender":
    backgroundClass = "bg-lavender-800";
    break;
  default:
    backgroundClass = "dark:bg-neutral-900 bg-white";
}
---

<div
  class={`size-full rounded-lg p-8 shadow-md dark:shadow-none ${backgroundClass}`}
>
  <slot />
</div>
