---
interface Props {
  links: Array<{
    href: string;
    title: string;
  }>;
}

const { links } = Astro.props;
---

<nav class="flex items-center justify-center flex-wrap p-6">
  <div class="flex space-x-4">
    {
      links.map((link) => (
        <a
          href={link.href}
          class="text-gray-50 hover:bg-lavender-900 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
        >
          {link.title}
        </a>
      ))
    }
  </div>
</nav>
