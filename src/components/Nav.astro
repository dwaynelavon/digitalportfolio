---
import { DarkModeToggle } from "./DarkModeToggle";

interface Props {
  links: Array<{
    href: string;
    title: string;
  }>;
}

const { links } = Astro.props;
---

<nav
  class="flex flex-wrap items-center justify-between gap-4 p-4 md:gap-8 lg:justify-center lg:gap-12 xl:gap-16"
>
  <div class="flex space-x-4">
    {
      links.map((link) => (
        <a
          href={link.href}
          class="rounded-md px-3 py-2 text-sm font-medium text-neutral-800 hover:bg-lavender-900 hover:text-white dark:text-neutral-50"
        >
          {link.title}
        </a>
      ))
    }
  </div>

  <DarkModeToggle client:load className="lg:hidden" />
</nav>
