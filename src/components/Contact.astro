---
import LinkBox from "./LinkBox.astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["flex flex-col", className]}>
  <LinkBox
    background="light-lavender"
    class="relative h-[79px] w-full"
    href="mailto:dwaynelove.tech@gmail.com"
  >
    <div
      class="flex size-full cursor-pointer items-center justify-between gap-4 text-neutral-900"
    >
      <div class="flex items-center gap-4">
        <!-- mail icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-mail"
          ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
            d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
        >
        <span class="font-normal font-semibold">Email me</span>
      </div>
      <!-- arrow right icon -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-arrow-right"
        ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
      >
    </div>
  </LinkBox>

  <LinkBox
    class="relative h-[79px] w-full"
    background="light-azure"
    href="https://www.linkedin.com/in/dwayne-love-8b279091/"
  >
    <div
      class="flex size-full cursor-pointer items-center justify-between gap-4 text-neutral-900"
    >
      <div class="flex items-center gap-4">
        <!-- linkedin icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-linkedin"
          ><path
            d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
          ></path><rect width="4" height="12" x="2" y="9"></rect><circle
            cx="4"
            cy="4"
            r="2"></circle></svg
        >
        <span class="font-normal font-semibold">Follow me</span>
      </div>
      <!-- arrow right icon -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-arrow-right"
        ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
      >
    </div>
  </LinkBox>
</div>
